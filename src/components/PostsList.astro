---
import type { CollectionEntry } from 'astro:content';
import Link from './Link.astro';

export type Props = {
  posts: CollectionEntry<'blog'>[];
  start?: number;
};

const { posts, start = 1 } = Astro.props;
---

<ol class='mt-4 px-10 space-y-2 list-decimal' start={start}>
    {
      posts.map((post) => (
        <li>
          <Link 
            class="flex justify-between" 
            href={`/blog/${post.slug}`}>
            {post.data.title}
            <span class= '
            //  text-slate-950 
            //   bg-sky-100  
              
            //   dark:bg-slate-950 
            //   dark:text-sky-100 
            
            hover:text-orange-600'>
              {post.data.date.toUTCString().slice(0, -13)}
            </span>
          </Link>
        </li>
      ))
    }
  </ol>